{
  "source": {
    "include": ["lib", "packages/ecs-js"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "recurse": true,
    "destination": "./docs/jsdoc/",
    "template": "./docsphinx/api-template",
    "readme": "./docsphinx/api-template/api-index.md"
  }
}
